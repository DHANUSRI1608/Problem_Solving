class Solution {
    public int returnToBoundaryCount(int[] nums) {
        int count=0,sum=0;
       for(int i=0;i<nums.length;i++) 
       {
        if(nums[i]>0)
        {
            sum+=nums[i];
        }
        else if(nums[i]<0)
        {
            sum+=nums[i];
        }
        if(sum==0)
        {
            count++;
        }
       }
       return count;
    }
}